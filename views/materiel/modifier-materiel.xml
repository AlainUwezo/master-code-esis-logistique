<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_materiel_modifier" model="ir.actions.act_window">
        <field name="name">Modification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">materiel.modifier</field>
        <field name="view_mode">form</field>
    </record>

    <record id="model_modification_materiel_form" model="ir.ui.view">
        <field name="name">materiel.modifier.form</field>
        <field name="model">materiel.modifier</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="action" />
                        <field name="materiel_id" />
                        <field name="quantity" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
